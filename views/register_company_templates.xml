<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="register_company_template" name="Register Company">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5">
                <h2 class="text-center mb-4">Cadastro da Empresa</h2>
                <form action="/register_company/submit" method="post" class="o_website_form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group mb-3">
                        <label for="name">Nome da Empresa</label>
                        <input type="text" name="name" class="form-control" required="required"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" required="required"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="phone">Telefone</label>
                        <input type="text" name="phone" class="form-control"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="industry">Setor</label>
                        <select name="industry" class="form-control">
                            <option value="bank">Banco</option>
                            <option value="telecom">Telecom</option>
                            <option value="isp">Provedor de Internet</option>
                            <option value="other">Outro</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Senha</label>
                        <input type="password" name="password" class="form-control" required="required"/>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Cadastrar Empresa</button>
                </form>
            </div>
        </t>
    </template>

    <template id="register_success_template" name="Register Company Success">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5 text-center">
                <h2>Cadastro realizado com sucesso!</h2>
                <p>Sua empresa <t t-esc="company.name"/> foi registrada.</p>
                  <p>Poderá agora aceder ao sistema com o email <b><t t-esc="company.email"/></b>.</p>
                <a href="/" class="btn btn-success mt-3">Ir para Página Inicial</a>
            </div>
        </t>

    </template>



</odoo>