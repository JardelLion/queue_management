<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="queue_management_res_company_view" model="ir.ui.view">
            <field name="name">queue.management.res.company.queue.service</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='general_info']" position="after">
                    <page name="queue_management_services" string="Services">
                       <field name="queue_service_ids">
                            <list editable="bottom">
                                <field name="name"/>
                            </list>
                       </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>